{%- style -%}

.video-1 {
  display: grid;
  place-items: center;
}

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}


{% if shop.locale == 'da' %}
  <div class=" video-1 page-width section-{{ section.id }}-padding">
    <video controls width="80%" height="auto">
      <source src="{{ section.settings.da_video_url }}" type="video/mp4" />
    </video>
  </div>
{% endif %}

{% if shop.locale == 'de' %}
  <div class=" video-1 page-width section-{{ section.id }}-padding">
    <video controls width="80%" height="auto">
      <source src="{{ section.settings.de_video_url }}" type="video/mp4" />
    </video>
  </div>
{% endif %}

{% if shop.locale == 'en' %}
  <div class=" video-1 page-width section-{{ section.id }}-padding">
    <video controls width="80%" height="auto">
      <source src="{{ section.settings.en_video_url }}" type="video/mp4" />
    </video>
  </div>
{% endif %}

{% schema %}
{
  "name": "video-1",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "url",
      "id": "da_video_url",
      "label": "da video url"
    },
    {
      "type": "url",
      "id": "de_video_url",
      "label": "de video url"
    },
    {
      "type": "url",
      "id": "en_video_url",
      "label": "en video url"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "video 1"
    }
  ]
}
{% endschema %}

